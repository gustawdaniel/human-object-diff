{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node16",
    "target": "ES2022",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "declaration": true
  },
  "watchOptions": {
    "excludeDirectories": ["dist", "node_modules"]
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"]
}
